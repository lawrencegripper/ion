    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Dispatcher",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/cmd/dispatcher",
            "envFile": "${workspaceRoot}/.vscode/private.env",
            "showLog": true,
            "args": [
                "start",
            ]
        },
        {
            "name": "Dispatcher Provider Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/internal/app/dispatcher/providers",
            "envFile": "${workspaceRoot}/.vscode/private.env",
            "args": [
                "-test.v",  
                "-test.timeout",
                "15m"
            ],
            "showLog": true
        },
        {
            "name": "Dispatcher ServiceBus Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/internal/pkg/servicebus",
            "envFile": "${workspaceRoot}/.vscode/private.env",
            "args": [
                "-test.v",  
                "-test.timeout",
                "5m"
            ],
            "showLog": true
        }
    ]
}